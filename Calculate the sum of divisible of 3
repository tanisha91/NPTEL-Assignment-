import java.util.Scanner;

public class Exercise1_3 {

       public static void main(String[] args) {

	   Scanner sc = new Scanner(System.in);	   int n=sc.nextInt();

	  int sum=0;

//Use for or while loop do the operation.

int a[]=new int[n];

int p=2;

for(int i=0;i<n;i++){

a[i]=p;

p+=2;

}

int count=0;

for(int i=0;i<n;i++){

if(a[i]%3==0)

count++;

}

System.out.print(count);

       

 }

}
